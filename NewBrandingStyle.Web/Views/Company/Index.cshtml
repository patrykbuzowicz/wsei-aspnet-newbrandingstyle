@model IEnumerable<NewBrandingStyle.Web.Entities.CompanyEntity>

<h1>Companies list</h1>

<div class="mb-4">
    <a asp-action="Add">Add new Company</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Is visible?</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var company in Model)
        {
            <tr>
                <td>@company.Name</td>
                <td>@company.Description</td>
                <td>@(company.IsVisible ? "Yes" : "No")</td>
            </tr>
        }
    </tbody>
</table>
